<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fang.marketmanage.dao.WorkTimeMapper">
    <resultMap id="workTimeResultMap" type="com.fang.marketmanage.entity.WorkTime">
        <id property="userId" column="userid"/>
        <result property="sDate" column="sdate"/>
        <result property="eDate" column="edate"/>
        <result property="workDay" column="workday"/>
    </resultMap>
    <select id="addNewWorkTime" parameterType="com.fang.marketmanage.entity.WorkTime">
        INSERT INTO workday(userid,sdate,edate,workday)
        VALUES (#{userId},#{sDate},#{eDate},#{workDay})
    </select>
    <select id="findWorkTimeList" resultMap="workTimeResultMap">
        SELECT * FROM workday
    </select>
    <delete id="deleteWorkTimeById">
        DELETE FROM workday
        WHERE userid=#{userId} and workday=#{workDay}
    </delete>
    <update id="updateWorkTimeById">
        UPDATE workday w
        <trim prefix="set" suffixOverrides=",">
            <if test="userid != null and userid != ''">
                w.userid = (SELECT userid FROM user WHERE username=#{username}),
            </if>
            <if test="roleid != null and roleid != ''">
                w.roleid = (SELECT roleid FROM role WHERE name=#{name}),
            </if>
            <if test="sdate != null and sdate != ''">
                w.sdate = #{sDate},
            </if>
            <if test="edate != null and edate != ''">
                w.edate = #{eDate},
            </if>
            <if test="workDay != null and workDay != ''">
                w.workday = #{workDay},
            </if>
        </trim>
        WHERE userid=#{userId} and workday=#{workDay}
    </update>
    <select id="searchWorkTimeByUsername" resultMap="workTimeResultMap">
        SELECT * FROM workday WHERE userid=(SELECT userid FROM user WHERE username=#{username}
    </select>
    <select id="findClerkTime" resultMap="workTimeResultMap">
        SELECT * FROM workday WHERE roleid=2
    </select>
    <select id="findKeeperTime" resultMap="workTimeResultMap">
        SELECT * FROM workday WHERE roleid=3
    </select>
</mapper>