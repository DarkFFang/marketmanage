<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fang.marketmanage.dao.UserMapper">
    <resultMap id="userResultMap" type="com.fang.marketmanage.entity.User">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="phone" column="phone"/>
        <result property="password" column="password"/>
        <result property="sex" column="sex"/>
    </resultMap>
    <insert id="addNewUser" parameterType="com.fang.marketmanage.entity.User">
        INSERT INTO user(username,phone,password,sex)
        VALUES (#{username},#{phone},#{password},#{sex})
    </insert>
    <select id="findUserList" resultMap="userResultMap">
        SELECT * FROM user
    </select>
    <delete id="deleteUserById">
        DELETE FROM user
        WHERE id=#{id}
    </delete>
    <update id="updateUserById">
        UPDATE user
        SET username=#{username},phone=#{phone},password=#{password},sex=#{sex}
        WHERE id=#{id}
    </update>
    <update id="updateUserRoleById">
        UPDATE user_role
        SET roleid=(SELECT roleid FROM role name=#{name})
        WHERE  userid=(SELECT userid FROM user WHERE username=#{username})
    </update>
    <select id="findUsersByUsername">
        SELECT * FROM user
        WHERE username=#{username}
    </select>
    <select id="findUserByPhone" resultMap="userResultMap">
        SELECT * FROM user
        WHERE phone=#{phone}
    </select>
    <select id="findClerkList">
        SELECT * FROM user
        WHERE roleid=2
    </select>
    <select id="findKeeperList">
        SELECT * FROM user
        WHERE roleid=3
    </select>

</mapper>