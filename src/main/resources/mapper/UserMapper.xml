<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fang.marketmanage.dao.UserMapper">
    <resultMap id="userResultMap" type="com.fang.marketmanage.entity.User">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="phone" column="phone"/>
        <result property="password" column="password"/>
        <result property="sex" column="sex"/>
        <result property="roleId" column="roleid"/>
    </resultMap>
    <insert id="addNewUser" parameterType="com.fang.marketmanage.entity.User">
        INSERT INTO user VALUES (#{id},#{username},#{phone},#{password},#{sex},#{roleId})
    </insert>
    <select id="findUserList" resultMap="userResultMap">
        SELECT * FROM user
    </select>
    <select id="login" parameterType="java.lang.String" resultMap="userResultMap">
        SELECT * FROM user
        WHERE #{phone}=phone and #{password}=password
    </select>
</mapper>